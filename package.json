{
  "name": "nixt",
  "version": "0.2.7",
  "description": "Test-runner for Nix",
  "author": "Dustin Lacewell",
  "license": "ISC",
  "main": "dist/index.js",
  "bin": {
    "nixt": "dist/index.js"
  },
  "scripts": {
    "build": "if [ -f \"tsconfig.json\" ]; then tsc; fi",
    "build:watch": "tsc -w",
    "preinstall": "npm run build",
    "node2nix": "nix-shell -p node2nix --run 'rm -rf node_modules; node2nix -14 -d -l package-lock.json'"
  },
  "devDependencies": {
    "@types/node": "^16.11.12",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "colors": "^1.4.0",
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "ts-command-line-args": "^2.2.0"
  }
}